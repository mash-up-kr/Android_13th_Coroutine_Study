<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="oval" >
            <gradient
                android:angle="270"
                android:startColor="@color/base_purple"
                android:endColor="@color/base_pink"
                android:type="linear" />
            <size android:width="70dp"
                android:height="70dp"/>
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval" >
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>